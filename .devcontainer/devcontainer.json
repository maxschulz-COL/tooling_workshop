{
  "name": "Python Analytics Tutorial Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "editor.tabSize": 4
      }
    }
  },
  "forwardPorts": [8888],
  "postCreateCommand": "echo 'Welcome to the Python Analytics tutorial environment!' > README.md"
}
